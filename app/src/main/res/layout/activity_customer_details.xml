<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetailsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_content_customer_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/close_button_background"
            android:layout_marginTop="27dp"
            android:layout_marginStart="35dp" />

    </LinearLayout>

    <ImageView
            android:id="@+id/iw_patient_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="46dp"
            android:contentDescription="@string/pregnant_details"
            android:scaleType="fitCenter"/>

    </LinearLayout>



</FrameLayout >